<% provide(:title, 'Rejestracja') %>
<h1><%= yield(:title) %></h1>

<div class="row">
  <div class="span4 offset4">

   <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nazwa" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Hasło" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Potwierdź hasło" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Utwórz konto", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
