<% provide(:title, 'Post') %>

<div class="row">
  <div class="span8">
    <h1>  <%= @post.title %></h1>
    <section>
      <%= @post.content %>
    </section>

    <h3>Tagi:</h3>
    <h3><%= join_tags(@post) %></h3>
    <h3>Komentarze (<%= @post.comments.count %>):</h3>
    <ul>
      <li> cokolwiek </li>
      <%= render @post.comments %>
    </ul>

    <h2>Dodaj komentarz:</h2>
    <%= render "comments/form" %>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
    <p><%= link_to 'Strona główna', "home/index" %></p>
  </div>
</div>

